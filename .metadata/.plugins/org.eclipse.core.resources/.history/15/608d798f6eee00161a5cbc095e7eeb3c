<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>

	<script>
		$("button").on("click", function() {
			
			var xhr = new XMLHttpRequest();
			xhr.onreadystatechange = function () {
				
				
				switch (xhr.readyState) {
				case 1:
					console.log("1번 들어옴");
					break;
				case 2:
					console.log("2번 들어옴");
					break;
				case 3:
					console.log("3번 들어옴");
					break;
				case 4:
					console.log("4번 들어옴");
					break;
				
				}
			};
			
			xhr.open("GET", "exam02", true);
			
		});
	</script>
</body>
</html>
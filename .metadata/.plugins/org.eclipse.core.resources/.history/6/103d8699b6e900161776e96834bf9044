<body>
	숫자1 : <input type="text" id="num1"/><br>
	타입 : <select name="opr" id="opr">
			<option value="1">+</option>
			<option value="2">-</option>
			<option value="3">*</option>
			<option value="4">/</option>
		</select><br>
	숫자2 : <input type="text" id="num2"/><br>
	<button onclick="openerCall();" >결과</button>
	<script>
		function openerCall() {
			
			var val;
			var sel = document.querySelector("#opr");
			var num1 = document.querySelector("#num1");
			var num2 = document.querySelector("#num2");

			for(i=0; i<sel.options.length; i++) {
			    if(sel.options[i].selected == true) {
			        val = sel.options[i].value;
			        break;
			    }
			}
			
			
			switch(val) {
				case 1: 
					result =  num1 + num2;
					break;
				case 2: 
					result = num1 - num2;
					break;
				case 3: 
					result =  num1 * num2;
					break;
				case 4: 
					result = num1 / num2;
					break;
		}
			
			opener.doResult(result);
			
			self.close();
			
		}
	</script>
</body>

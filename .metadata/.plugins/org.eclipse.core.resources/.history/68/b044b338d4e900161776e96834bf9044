	<button onclick="doBicSize();">크게</button>
	<button onclick="doSmallSize();">작게</button>
	<br>
	<br>
	<br>
	<img src="ball41.gif" />
	
	<script>
	
		var imgObj = document.querySelector("img");
		function doBicSize() {
			imgObj.width= imgObj.width + 10;
			imgObj.height= imgObj.height + 10;
		}
		
		function doSmallSize() {
			imgObj.width= imgObj.width + 10;
			imgObj.height= imgObj.height + 10;
			
		}
	</script>	

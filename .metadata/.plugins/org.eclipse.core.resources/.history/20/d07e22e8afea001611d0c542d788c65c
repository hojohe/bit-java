package kr.co.mini5.detail.servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import kr.co.mini5.common.util.DdayCalculator;
import kr.co.mini5.detail.dao.DetailDAO;
import kr.co.mini5.vo.DetailVO;
import kr.co.mini5.vo.FeedVO;

@WebServlet("/detail/detailList")
public class DetailListServlet extends HttpServlet {
			
	@Override
	public void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		DetailDAO dao = new DetailDAO();
		DdayCalculator calculator = new DdayCalculator();
		
		FeedVO feedVo = dao.selectOneFeed(1);
		
		DetailVO vo = new DetailVO();
		vo.setFeedNo(feedVo.getFeedNo());
		vo.setUserNo(1);
		
		List<DetailVO> detailList = dao.selectDetail(vo);
		request.setAttribute("detailList", detailList);

		String dday = calculator.getDday(feedVo.getEndDate());
		request.setAttribute("dday", dday);
		
		RequestDispatcher rd = request.getRequestDispatcher("/jsp/view/detail/detailList.jsp");
		rd.forward(request, response);
		
	}
	
	
}


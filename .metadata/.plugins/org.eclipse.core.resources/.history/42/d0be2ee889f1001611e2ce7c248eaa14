/**
 * feedWriteForm.jsp에 연결되는 js 파일 (1번 피드냐 2번 스토리냐에 따라 화면 달라져)
 */


	$('.type').on('click', function(){
		
		$(".type").attr("checked", false);
		$(this).attr("checked", true);
		$(".type").attr("style", "background-color: #fff;");
		
		if($(this).attr("checked")) {
			$("#feedTypeChk").val($(this).val());
			$(this).attr("style", "background-color: #ccc;");
		}
		
		if($(this).attr("checked")
				&& $(this).attr("id") ==  "feed") {
			$("#date2").attr("style", "display:none;");
			$("#alram2").attr("style", "display:none;");
			
			$("#date1").attr("style", "display:block;");
			$("#alram1").attr("style", "display:block;");
			
		}
		else {
			$("#date1").attr("style", "display:none;");;
			$("#alram1").attr("style", "display:none;");

			$("#date2").attr("style", "display:block;");
			$("#alram2").attr("style", "display:block;");
			
		} 
	});
	
	$(".bullet").click(function() {
		
		$(".bullet").attr("checked", false);
		$(".bullet").attr("style", "background-color: #fff;");
		
		$(this).attr("checked", true);
		
		if($(this).attr("checked")) {
			$("#bulletChk").val($(this).val());
			$(this).attr("style", "background-color: #ccc;");
		}
	});
	$(".schedule").click(function() {
		
		$(".schedule").attr("checked", false);
		$(".schedule").removeAttr("style");
		
		$(this).attr("checked", true);
		
		if($(this).attr("checked")) {
			$("#alertScheduleChk").val($(this).val());
			$(this).attr("style", "background-color: #ccc;");
		}
	});
	
		
	/*

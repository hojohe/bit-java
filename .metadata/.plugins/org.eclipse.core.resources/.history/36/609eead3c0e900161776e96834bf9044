<!-- 
	엘리먼트에 속성을 추가하기(DOM API)
	
	<img src="" msg="test" />
	
	// <img />
	var imgObj = document.createElement("img");
	
	엘리먼트.setAttricute(속성, 값);
	사용자가 정의하는 속성 추가 가능
 -->
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<button onclick="doAdd();">추가</button>
	<div id="list"></div>
	<script>
		function doAdd() {
			// img 엘리먼트를 생성 후 id가 list인 엘리먼트에 자식으로 추가
			// img 엘리먼트의 src 속성으로 a.png
			// 넓이(200), 높이(150)으로 설정한다.
			
			var list = document.querySelector("#list");
			// <img>
			var imgObj = document.createElement("img");
			
			// <img src="ajpg" width="200" height="150">
			imgObj.setAttribute("src", "a.jpg");
			imgObj.setAttribute("width", "200");
			imgObj.setAttribute("heigth", "150");
			
			
			//사용자 정의 속성 설정
			imgObj.setAttribute("msg", "test");
			
			
			// 생성된 이미지 엘리먼트 추가하기
			list.appendChild(imgObj);
			
		}
	</script>
</body>
</html>
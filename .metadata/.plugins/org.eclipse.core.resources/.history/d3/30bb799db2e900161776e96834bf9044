<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<input type="button" value="시작" onclick="start()" />
	<input type="button" value="중지" onclick="stop()" />
	<script>
		function start() {
			
			setTimeout(function() {
				var pop = window.open("","pop1","width=200, height=200");
				pop.moveTo(
						Math.floor(Math.random() * 100 + 1), 
						Math.floor(Math.random() * 100 + 1)
				);
			}, 2000)
		}
		function stop() {
			self.close();			
		}
	</script>
</body>
</html>
		var dObj = document.querySelector("div");
		document.addEventListener("mousemove", function(e) {
			console.log("1");
			
			var top = e.clientY;
			var left = e.clientX;
			
			dObj.style.top = top;
			dObj.style.left= left;
			
		});
	

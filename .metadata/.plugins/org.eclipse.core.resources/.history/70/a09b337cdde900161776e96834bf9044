<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<button onclick="doAdd();">추가</button>
	
	<div id="div"></div>
	
	
	<script>
	
		var divObj = document.querySelector("#div");
	
		function doAdd() {
			var div = document.createElement("div");

			var seq = Number(div.getAttribute("data-seq")) + 1;
			div.setAttribute("data-seq", seq );
			div.innerHTML += "추가된 DIV id : child_" + seq
							+ "<button onclick=\"doDel(seq);\">삭제</button><br>";
							
			divObj.appendChild(div);
		}
		
		function doDel(seq) {
			var arr = document.querySelectorAll("div");
			
			for(var i =0; i < arr.length; i++) {
				
				if(seq == arr[i].getAttribute("data-seq")) {
					arr[i].parentNode.removeChild("div");
				}
				
			}
		}
		
	</script>
</body>
</html>
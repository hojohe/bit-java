<script src="${pageContext.request.contextPath}/js/script.js"></script>
<script src="${pageContext.request.contextPath}/js/dist/sweetalert.min.js"></script>
<script>

$("#userMenu").on("click", function() {
	if('${empty user}' == 'true') {
		swal("로그인 후 사용 가능한 메뉴입니다.");
		return false;
	}
	location.href = '${pageContext.request.contextPath}/user/userDetail?userNo=${user.no}';

});

$("#detailMenu").on("click", function() {
	if('${empty user}' == 'true') {
		swal("로그인 후 사용 가능한 메뉴입니다.");
		return false;
	} 
	location.href = '${pageContext.request.contextPath}/detail/detailList?userNo=${user.no}';
});
$("#feedMenuAll").on("click", function() {
	if('${empty user}' == 'true') {
		swal("로그인 후 사용 가능한 메뉴입니다.");
		return false;
	} 
	location.href = '${pageContext.request.contextPath}/feed/feedList?userNo=${user.no}&feedType=0';
});
$("#feedMenu1").on("click", function() {
	if('${empty user}' == 'true') {
		swal("로그인 후 사용 가능한 메뉴입니다.");
		return false;
	} 
	location.href = '${pageContext.request.contextPath}/feed/feedList?userNo=${user.no}&feedType=1';
});
$("#feedMenu2").on("click", function() {
	if('${empty user}' == 'true') {
		swal("로그인 후 사용 가능한 메뉴입니다.");
		return false;
	} 
	location.href = '${pageContext.request.contextPath}/feed/feedList?userNo=${user.no}&feedType=2';
});
$("#confMenu").on("click", function() {
	if('${empty user}' == 'true') {
		swal("로그인 후 사용 가능한 메뉴입니다.");
		return false;
	} 
	location.href = '${pageContext.request.contextPath}/feed/feedConfWriteForm?userNo=${user.no}&feedType=2';
});
$("#storyMenu").on("click", function() {
	swal("서비스 준비 중입니다.");
});
</script>





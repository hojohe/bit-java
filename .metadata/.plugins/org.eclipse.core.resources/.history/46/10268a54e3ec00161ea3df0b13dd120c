<!-- 
	-----------------------------------------
	고전 이벤트 방식
	-----------------------------------------
	1. <button onclick="test();">클릭</button>
	-----------------------------------------
	권장 방식
	-----------------------------------------
	1. 
	<button>클릭</button>
	var btn = document.querySelector("button");
	btn.onclick = test;
	function test() {}
	2. 
	<button>클릭</button>
	var btn = document.querySelector("button");
	btn.onclick = function test() {}
	-----------------------------------------	
 -->
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style>
	button {
		width: 200px;
		height: 100px;
		color: white;
		background: tomato;
		border: 2px solid black;
		font-size: 25px;
	}
</style>
</head>
<body>
	<button>1번 버튼</button>
	<button>2번 버튼</button>
	
	<script>
		var btns = document.querySelectorAll("button");
		for(var i = 0; i < btns.length; i++) {
			btns[i].onclick = function () {
				alert();
			}
		}
	</script>
</body>
</html>
<!-- 
	-----------------------------------------
	고전 이벤트 방식
	-----------------------------------------
	1. <button onclick="test();">클릭</button>
	-----------------------------------------
	권장 방식
	-----------------------------------------
	1. 
	<button>클릭</button>
	var btn = document.querySelector("button");
	btn.onclick = test;
	function test() {}
	2. 
	<button>클릭</button>
	var btn = document.querySelector("button");
	btn.onclick = function test() {}
	-----------------------------------------	
 -->
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style>
	button {
		width: 200px;
		height: 100px;
		color: white;
		background: tomato;
		border: 2px solid black;
		font-size: 25px;
	}
</style>
</head>
<body>
	<button id="btn1">시작</button>
	<button id="btn2">종료</button>
	
	<script>
	var btn1 = document.querySelector("#btn1");
	var btn2 = document.querySelector("#btn2");
	
	function test1() {
		alert(this.innerHTML);
		btn1.disabled = true;
		btn2.disabled = true
		btn2.onclick=test2;
		
	};
	
	function test2() {
		alert(this.innerHTML);
		btn1.onclick();
		btn1.onclick=test1;
	};
	
	
	var btns = document.querySelectorAll("button");
	for(var i = 0; i < btns.length; i++) {
		btns[i].onclick = function () {
			alert(this.innerHTML);
			
			// 이벤트 제거
			this.onclick = null;
		}
	}
	
	</script>
</body>
</html>
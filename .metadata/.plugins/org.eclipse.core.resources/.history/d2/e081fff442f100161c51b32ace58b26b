package kr.co.mini5.detail.servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import kr.co.mini5.common.util.DateUtil;
import kr.co.mini5.detail.dao.DetailDAO;
import kr.co.mini5.vo.DetailVO;
import kr.co.mini5.vo.FeedVO;

@WebServlet("/detail/detailList")
public class DetailListServlet extends HttpServlet {
			
	DetailDAO dao = new DetailDAO();
	
	@Override
	public void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		int userNo = Integer.parseInt(request.getParameter("userNo"));
		
		/* 스토리 피드 중 가장 최신 한건 가져오기 */ 
		DetailVO detail = dao.selectOneDetail(userNo);
		
		if(detail != null) {
			DetailVO vo1 = new DetailVO();
			vo1.setFeedNo(detail.getFeedNo());
			vo1.setUserNo(userNo);
			
			/* 스토리 피드 리스트 가져오기 */
			List<DetailVO> detailList = dao.selectDetail(vo1);
	
			
			/* 화면에서 필요한 날짜 dateUtil이용하여 계산 */
			DateUtil util = new DateUtil();
			String dday = util.getDday(detail.getEndDate());
			int todayDday = 0;
			todayDday = detail.getFeedDday() - Integer.parseInt(dday);
			
			DetailVO vo2 = new DetailVO();
			vo2.setFeedNo(detail.getFeedNo());
			vo2.setUserNo(userNo);
			vo2.setDays(todayDday);
			
			
			request.setAttribute("detailList", detailList); // 상세 리스트
			request.setAttribute("dday", dday);				// dday 날짜
			request.setAttribute("todayDday", todayDday);	// 오늘 며칠째(예: 21일차)
			if(todayDday > 0) {
				int percent = dao.selectTodayDetail(vo2);
				request.setAttribute("percent", percent);	// 오늘차 수행 퍼센트
			}
		}
		
		request.setAttribute("detail", detail);			// 상세 최신 한건

		
		/* 상세 리스트 화면으로 이동 */
		RequestDispatcher rd = request.getRequestDispatcher("/jsp/view/detail/detailList.jsp");
		rd.forward(request, response);
		
	}
	
	
}


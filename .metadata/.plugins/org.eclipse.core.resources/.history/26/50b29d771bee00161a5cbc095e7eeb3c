package kr.co.mini5.user.dao;

import org.apache.ibatis.session.SqlSession;

import kr.co.mini5.common.db.MyAppSqlConfig;
import kr.co.mini5.vo.UserVO;


public class UserDAO {
	
	private static SqlSession sqlMapper = MyAppSqlConfig.getSqlSessionInstance();
	
	public UserVO innerLogin(UserVO param){
		UserVO user = sqlMapper.selectOne(
				"kr.co.mlec.mini5.user.dao.UserDAO.selectUser", param);
		return user;
	}
	public UserVO outerLogin(String id){
		UserVO user = sqlMapper.selectOne(
				"kr.co.mlec.mini5.user.dao.UserDAO.selectUser", id);
		return user;
	}
	public void insertSignUp(UserVO vo) {
		sqlMapper.insert("kr.co.mlec.mini5.user.dao.UserDAO.insertUser", vo);
		sqlMapper.commit();
	}
	
	public String selectUserIdList(String id) {
		String dbUsesrId = sqlMapper.selectOne("kr.co.mlec.mini5.user.dao.UserDAO.selectUserIdList", id);
		return dbUsesrId;
	}
	public UserVO selectUserPassList(UserVO vo) {
		UserVO dbUsesrpass = sqlMapper.selectOne("kr.co.mlec.mini5.user.dao.UserDAO.selectUserPassList", vo);
		return dbUsesrpass;
	}

	public void updateUserPass(UserVO vo){
		sqlMapper.update("kr.co.mlec.mini5.user.dao.UserDAO.updateUserPass",vo);
		sqlMapper.commit();
	}
	public UserVO selectProfile(UserVO param) {
		UserVO dbProfile = sqlMapper.selectOne("kr.co.mlec.mini5.user.dao.UserDAO.selectProfile", param);
		return dbProfile;
		
	}
	
	
	
	
}

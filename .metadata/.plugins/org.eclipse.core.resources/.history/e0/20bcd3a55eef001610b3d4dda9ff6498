package kr.co.mini5.user.servlet;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import kr.co.mini5.user.dao.UserDAO;
import kr.co.mini5.vo.UserVO;

@WebServlet("/user/userDetail")
public class UserDetailServlet extends HttpServlet{

	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		request.setCharacterEncoding("utf-8");
		System.out.println(request.getParameter("no"));
	
		int no = Integer.parseInt(request.getParameter("no"));
		
		UserDAO dao = new UserDAO();
		UserVO user = dao.selectDetail(no);
		
		request.setAttribute("detail", user);
	
		RequestDispatcher rd =
				request.getRequestDispatcher("/jsp/view/user/userDetail.jsp");
		rd.forward(request, response);
	}

}

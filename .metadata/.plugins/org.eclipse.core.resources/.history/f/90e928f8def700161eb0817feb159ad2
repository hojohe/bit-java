package annotation.quiz;

import java.lang.reflect.Method;
import java.util.Scanner;

public class Test {
	public static void main(String[] args) {
		
		Class<?> clz = BoardController.class;
		
		Method[] mArr = clz.getDeclaredMethods();
		Object obj = null;
		try {
			obj = clz.newInstance();
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		Scanner sc = new Scanner(System.in);
		
		while (true) {
			System.out.print("경로 : ");
			String url = sc.nextLine();
			if (url.equals("quit")) break;
			
			
			for(Method m: mArr) {
				RequestMapping rMpp = m.getAnnotation(RequestMapping.class);
				if(rMpp == null) continue;
				
				if(url.equals(rMpp.value())) {
					System.out.println("메서드명 : " + m.getName());
					
						m.invoke(obj);
				}
				
			}
			
			
			
			
		}
	}
}

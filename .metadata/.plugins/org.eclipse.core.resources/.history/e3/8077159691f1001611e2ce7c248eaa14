/**
 * feedUpdateForm.jsp에 연결되는 js 파일
 */

	

	var option = document.querySelectorAll("option");
	for (var i = 0; i < option.length; i++) {
		if (option[i].value == $('#feedDday').val()) {
			var opt = option[i];
			$("opt").val().attr("selected", "selected");
		} 
	};
	var schedule = document.querySelectorAll(".schedule");
	for (var i = 0; i < schedule.length; i++) {
		if (schedule[i].value == $('#alertScheduleChk').val()) {
			schedule[i].setAttribute("style", "background-color: #ccc;");
		} 
	};
	
	var bullet = document.querySelectorAll(".bullet");
	for (var i = 0; i < bullet.length; i++) {
		if (bullet[i].value == $('#bulletChk').val()) {
			bullet[i].setAttribute("style", "background-color: #ccc;");
		} 
	};
	
	var type = document.querySelectorAll(".type");
	for (var i = 0; i < type.length; i++) {
		if (type[i].value == $('#feedTypeChk').val()) {
			type[i].setAttribute("style", "background-color: #ccc;");
			
			if ($("#feedTypeChk").val() == 1) {
			//	alert("피드타입 : " + $("#feedTypeChk").val());
				$("#date2").attr("style", "display:none;");
				$("#alram2").attr("style", "display:none;");
				
				$("#date1").attr("style", "display:block;");
				$("#alram1").attr("style", "display:block;");
			} else {
			//	alert("피드타입 : " + $("#feedTypeChk").val());
				$("#date1").attr("style", "display:none;");
				$("#alram1").attr("style", "display:none;");

				$("#date2").attr("style", "display:block;");
				$("#alram2").attr("style", "display:block;");
				
				//$("#dDay").val($("#dDay option:selected").val()).text;

				var arr = document.querySelectorAll(".schedule");
				for (var i = 0; i < arr.length; i++) {
					if (arr[i].value == $("#alertScheduleChk").val()) {
					}
				}
			}
		} 
	};
	
	
	$(".bullet").on("click", function() {
		swal("불렛종류는 수정하실 수 없습니다.");
	});
	$(".type").on("click", function() {
		swal("종류는 수정하실 수 없습니다.");
	});
	$("#startDate").on("click", function() {
		swal("일자는 수정하실 수 없습니다.");
	});
	$("#startDate2").on("click", function() {
		swal("일자는 수정하실 수 없습니다.");
	});
	$("#alertDate").on("click", function() {
		swal("알림은 수정하실 수 없습니다.");
	});
	$("#dDay").on("click", function() {
		swal("알림은 수정하실 수 없습니다.");
	});
	$("#alertType").on("click", function() {
		swal("알림은 수정하실 수 없습니다.");
	});




package kr.co.mini5.user.servlet;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import kr.co.mini5.user.dao.UserDAO;
import kr.co.mini5.vo.UserVO;

@WebServlet("/user/userDetail")
public class UserDetailServlet extends HttpServlet{

	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		request.setCharacterEncoding("utf-8");
		System.out.println(request.getParameter("no"));
	
		//String no =String.valueOf(request.getParameter("no"));
		int no = Integer.parseInt(request.getParameter("no"));
		
		String id = request.getParameter("id");
		String pass = request.getParameter("pass");
		String nickName = request.getParameter("nickName");
		String autoType = request.getParameter("autoType");

		String img = request.getParameter("profImgPath");
		String img2 = request.getParameter("covrImgPath");
		
		UserVO param = new UserVO();
		param.setNo(no);
		param.setId(id);
		param.setPass(pass);
		param.setNickName(nickName);
		param.setAutoType(autoType);
		
		param.setProfImgPath(img);
		param.setCovrImgPath(img2);
		
		UserDAO dao = new UserDAO();
		UserVO user = dao.selectProfile(param);
		
		request.setAttribute("detail", user );
	
		RequestDispatcher rd =
				request.getRequestDispatcher("/jsp/view/user/userDetail.jsp");
		rd.forward(request, response);
	}

}

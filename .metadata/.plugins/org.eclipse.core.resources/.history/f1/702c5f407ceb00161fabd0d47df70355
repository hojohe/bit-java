package kr.co.mini5.detail.servlet;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import kr.co.mini5.detail.dao.DetailDAO;
import kr.co.mini5.vo.DetailVO;

@WebServlet("/detail/detailUpdate")
public class DetailUpdateServlet extends HttpServlet {

	@Override
	public void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	
		DetailVO detailVo = new DetailVO();
		DetailDAO dao = new DetailDAO();
		
		detailVo.setFeedNo(Integer.parseInt(request.getParameter("feedNo")));
		detailVo.setUserNo(Integer.parseInt(request.getParameter("userNo")));
		detailVo.setDays(Integer.parseInt(request.getParameter("todayDday")));
		detailVo.setPercent(Integer.parseInt(request.getParameter("ratingNum")));
		
		dao.updateDetail(detailVo);
		
		request.setAttribute("msg", "오늘의 점수가 등록되었습니다.");
		
		RequestDispatcher rd = request.getRequestDispatcher("/detail/detailList");
		rd.forward(request, response);
	
	}
}












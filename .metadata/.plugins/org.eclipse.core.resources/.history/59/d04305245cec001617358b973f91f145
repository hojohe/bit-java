/**
 * feedWriteForm.jsp에 연결되는 js 파일 (1번 피드냐 2번 스토리냐에 따라 화면 달라져)
 */
var trHtml1 = document.querySelector("#trDate"); 
var trHtml2 = document.querySelector("#trAlram");


	$("input[name=feedType]").change("change",function() {
	
		trHtml1.innerHTML = "<th>일자</th>"
						  + "<td><input type='date' name='startDate' /></td>";
		trHtml2.innerHTML = "<th>알림</th>"
						  + "<td><input type='date' name='alertDate' /></td>";
	
		if(this.value == "2") {
			trHtml1.innerHTML = "<th>일자</th>"
							  + "<td><input type='date' name='startDate' style='display:\"inline\" float:\"left\"' /> &nbsp"
							  + "<div class='dropdown' ><button class='btn btn-default dropdown-toggle' type='button' id='feedDdayChk' data-toggle='dropdown'>D-day" 
							  + "<span class='caret'></span></button>"
							  + "<ul class='dropdown-menu' role='menu' aria-labelledby='menu1'>"
							  + "<li role='presentation'><a role='menuitem' tabindex='-1' href='#'>D-30</a></li>"
							  + "<li role='presentation'><a role='menuitem' tabindex='-1' href='#'>D-50</a></li>"
							  + "<li role='presentation'><a role='menuitem' tabindex='-1' href='#'>D-100</a></li></ul><td></div>";
			trHtml2.innerHTML = "<th>알림</th>"
							  + "<td><div class='btn-group btn-group-xs' data-toggle='buttons'>"
							  +"<label class='btn btn-primary active'>"
							  +"<input type='radio' autocomplete='off' name='alertSchedule' value='1'> 매일 </label> "
							  +"<label class='btn btn-primary'> "
							  +"<input type='radio' autocomplete='off' name='alertSchedule' value='2' > 주간"
							  +"</label></div></td>";
		} 
	});
	
	$("input[name=bulletNo]").change(function() {
		if(this.checked) {
			document.querySelector("#bulletChk").value =  this.value;
		}
	});
	
	$("input[name=feedType]").change(function() {
		if(this.checked) {
			document.querySelector("#feedTypeChk").value =  this.value;
		}
	});
	
	$("input[name=alertSchedule]").change(function() {
			if(this.checked) {
				document.querySelector("#alertScheduleChk").value =  this.value;
			}
	});
	
	
	
	
	
	// 폼 저장 
	function save(){
		var feedForm = document.querySelector("#feedForm");
		
		console.log("name " + document.querySelector("input[name=startDate]"));		
		
		feedForm.target="_self";
		feedForm.submit();
		
		
	}





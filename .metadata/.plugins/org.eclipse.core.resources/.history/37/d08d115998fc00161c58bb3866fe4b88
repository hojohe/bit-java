package _04_schema;

import org.aspectj.lang.ProceedingJoinPoint;

public class TimeAspect {
	
	// around advice 일 경우
	public void executeTime(ProceedingJoinPoint pjp) throws Throwable {
		System.out.println("실행 전");
		
		try {
			// 핵심기능 메서드 호출
			// after-returning
			pjp.proceed(); 
		} catch (Throwable t) {
			// after-throwing
		} finally {
			// after
			System.out.println("실행 후");
		}
		
	}
}

<div style="height:300px;border:1px solid;margin-left: 250px;" id="divBlock"></div>

<script>
	function funcChk(chkObj) {
		
		switch(chkObj.value) {
		
			case "java" :
				
				if(chkObj.checked == true) {
					divBlock.innerHTML += "<span>JAVA<input type='button' id='java' name='button' value='X' onclick='funcDel(this);' /></span>";
				}
				else {
					funcChkDel(chkObj);
				}
				
				break;
			case "sql" :
				divBlock.innerHTML += "<span>SQL<input type='button' id='sql' name='button' value='X' onclick='funcDel(this);' /></span>";
				break;
			case "html" :
				divBlock.innerHTML += "<span>HTML<input type='button' id='html' name='button' value='X' onclick='funcDel(this);' /></span>";
				break;
			case "css" :
				divBlock.innerHTML += "<span>CSS<input type='button' id='css' name='button' value='X' onclick='funcDel(this);' /></span>";
				break;
			case "javascipt" :
				divBlock.innerHTML += "<span>JAVASCRIPT<input type='button' id='javascipt' name='button' value='X' onclick='funcDel(this);' /></span>";
				break;
		
		}
		
	}
	
	function funcDel(delObj) {
		
		delObj.parentNode.parentNode.removeChild(delObj.parentNode);
		
		arrChk = document.querySelectorAll("input[name=chk]");
		
		for(var i = 0; i < arrChk.length; i++) {
			if(arrChk[i].value == delObj.id) {
				arrChk[i].checked = false;
			}
		}
		
	}
	
	

package kr.co.mini5.feed.servlet;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import kr.co.mini5.feed.dao.FeedDAO;
import kr.co.mini5.vo.FeedVO;

@WebServlet("/feed/feedList")
public class FeedListServlet extends HttpServlet {
	private FeedDAO dao;
	
	public FeedListServlet() {
		this.dao= new FeedDAO();
	}

	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		List<FeedVO> feedList = dao.selectList();
		request.setAttribute("feedList", feedList);
		RequestDispatcher rd = request.getRequestDispatcher("/jsp/view/feed/feedList.jsp");
		rd.forward(request, response);
	}
	
}

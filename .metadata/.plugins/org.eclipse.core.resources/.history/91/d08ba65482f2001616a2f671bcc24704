/*
 * 1. 불렛 테이블
 * */
drop table t_bullet
create table t_bullet(
	bullet_no number(2) not null, 
	bullet_name varchar2(20) not null,
	bullet_img_path varchar2(200) not null, 
	constraint pk_bullet primary key (bullet_no)
);

